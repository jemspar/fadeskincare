extends layout

block scripts
    script(src="https://www.paypal.com/sdk/js?client-id=AT02gI6RH8phPj8RlVEXWYkMBrKwwMCg6Odi3R9xU_pW44dLZcjaeNLWkaYEMqeCShWNBXWwh5PBWDUt")

block content
    h1 cart
    .product(id="cart")
        if cart
            #items
                em Items in cart:
                each cartItem in cart.genArray()
                    div(class="cart_item",id=cartItem.item._id)
                        span=cartItem.item.name + ",  quantity " + cartItem.qty
            h3
                em
                    = "Total: $" + cart.totalPrice
            #paypal-button-container
            script(src="/javascripts/paypal-test.js")
            script(src="/javascripts/paypal-button-color.js")
        else
            p Your cart is empty. Why not go 
                a(href="/")
                    | add something?



    