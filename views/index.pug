extends layout

block scripts
  script(src="/javascripts/index.js")

block nav
  h1#title= title
  p > skincare shop <
  p 째 fade up 째
    br
    | 째 for all 째
  img(src="/images/fade_logo_web.svg", alt="fade logo", id="logo")
  h3#cart_link
    | items in cart: 
    span#cart_items= cart.totalQty

block content
  each prod in products
    .product
      h2.name= prod.name
      img(src=prod.imagePath, class="prodImg")
      .description
        h3.price
          | $ 
          = prod.price   
        button(onClick="addToCart(\"" + prod._id + "\")").add_to_cart
          | Add to cart
        != md.toHTML(prod.description)

